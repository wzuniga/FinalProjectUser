<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_margin="16dp"
    android:layout_height="match_parent"
    tools:context="com.wz.www.finalproject.CameraActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/infoBotonFoto" />

    <Button
        android:id="@+id/take_image_from_camera"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="takeImageFromCamera"
        android:text="@string/ButtonPhoto" />

    <ImageView
        android:id="@+id/image_from_camera"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_launcher_round" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:entries="@array/fail_array"
        android:prompt="@string/fail_prompt" />

    <ImageButton
        android:id="@+id/sendInfoToServer"
        style="@android:style/Widget.Material.ImageButton"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccentButton"
        app:srcCompat="@android:drawable/ic_menu_send" />

</LinearLayout>
